<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>honkai.girls.sergkart</modId>
		<key>WVC_AutoBodyPartsGenerator_GlobalVersion</key>
		<defaultValue>false</defaultValue>
		<caseFalse>
		</caseFalse>
		<caseTrue>

			<!--=====================================================================-->

			<Operation Class="PatchOperationAdd">
				<xpath>/Defs</xpath>
				<value>

				  <ThingCategoryDef>
					<defName>WVC_AutoGeneratedBodyParts_bionic</defName>
					<label>outworld bionic body parts</label>
					<parent>BodyParts</parent>
				  </ThingCategoryDef>

				  <ThingCategoryDef>
					<defName>WVC_AutoGeneratedBodyParts_advanced</defName>
					<label>outworld advanced body parts</label>
					<parent>BodyParts</parent>
				  </ThingCategoryDef>

				  <ThingCategoryDef>
					<defName>WVC_AutoGeneratedBodyParts_cybernetic</defName>
					<label>outworld cybernetic body parts</label>
					<parent>BodyParts</parent>
				  </ThingCategoryDef>

				  <ThingCategoryDef>
					<defName>WVC_AutoGeneratedBodyParts_ultra</defName>
					<label>outworld ultra body parts</label>
					<parent>BodyParts</parent>
				  </ThingCategoryDef>

				  <ThingCategoryDef>
					<defName>WVC_AutoGeneratedBodyParts_archotech</defName>
					<label>outworld archotech body parts</label>
					<parent>BodyParts</parent>
				  </ThingCategoryDef>

				  <HediffDef ParentName="AddedBodyPartBase" Name="WVC_AutoGeneratedBodyParts_AddedBodyPartBase" Abstract="True">
					<description>Body part created in the outer worlds of the empire.</description>
					<scenarioCanAdd>false</scenarioCanAdd>
					<defaultLabelColor>(255,255,255)</defaultLabelColor>
				  </HediffDef>

				  <ThingDef ParentName="BodyPartBase" Name="WVC_AutoGeneratedBodyParts_BodyPartBase" Abstract="True">
					<description>Body part created in the outer worlds of the empire.</description>
					<techLevel>Spacer</techLevel>
					<graphicData>
					  <texPath>WVC/Implants/Implant</texPath>
					  <graphicClass>Graphic_Single</graphicClass>
					  <drawSize>0.95</drawSize>
					  <color>(165,169,165)</color>
					</graphicData>
					<tradeTags>
					  <li>Bionic</li>
					  <li>WVC_AutoGeneratedBodyParts</li>
					</tradeTags>
					<techHediffsTags>
					  <li>Advanced</li>
					</techHediffsTags>
					<thingSetMakerTags>
					  <li>RewardStandardLowFreq</li>
					</thingSetMakerTags>
				  </ThingDef>

				  <TraderKindDef>
					<defName>WVC_AutoGeneratedBodyParts_OrbitalTrader</defName>
					<label>super rare implants trader</label>
					<orbital>true</orbital>
					<stockGenerators>

					  <li Class="StockGenerator_SingleDef">
						<thingDef>Silver</thingDef>
						<countRange>20000~40000</countRange>
					  </li>

					  <li Class="StockGenerator_Tag">
						<tradeTag>WVC_AutoGeneratedBodyParts</tradeTag>
						<thingDefCountRange>20~39</thingDefCountRange>
						<countRange>1~2</countRange>
					  </li>

					  <li Class="StockGenerator_BuyTradeTag"><tag>ImplantEmpireCommon</tag></li>
					  <li Class="StockGenerator_BuyTradeTag"><tag>ImplantEmpireRoyal</tag></li>
					  <li Class="StockGenerator_BuyTradeTag"><tag>WVC_AutoGeneratedBodyParts</tag></li>
					  
					</stockGenerators>
				  </TraderKindDef>

				  <TraderKindDef>
					<defName>WVC_AutoGeneratedBodyParts_Trader</defName>
					<!-- <label>super rare implants trader</label> -->
					<!-- <orbital>true</orbital> -->
					<stockGenerators>

					  <li Class="StockGenerator_SingleDef">
						<thingDef>Silver</thingDef>
						<countRange>5000~10000</countRange>
					  </li>

					  <li Class="StockGenerator_Tag">
						<tradeTag>WVC_AutoGeneratedBodyParts</tradeTag>
						<thingDefCountRange>12~20</thingDefCountRange>
						<countRange>1~2</countRange>
					  </li>

					  <li Class="StockGenerator_BuyTradeTag"><tag>ImplantEmpireCommon</tag></li>
					  <li Class="StockGenerator_BuyTradeTag"><tag>ImplantEmpireRoyal</tag></li>
					  <li Class="StockGenerator_BuyTradeTag"><tag>WVC_AutoGeneratedBodyParts</tag></li>
					  
					</stockGenerators>
				  </TraderKindDef>

				</value>
			</Operation>

			<!--=====================================================================-->

			<Operation Class="XmlExtensions.ApplyPatch">
				<patchName>WVC_BodyPartGenerator_GlobalVersion</patchName>
				<arguments>
					<li>1.0</li>
					<li>bionic</li>
					<li>900</li>
				</arguments>
			</Operation>

			<Operation Class="XmlExtensions.ApplyPatch">
				<patchName>WVC_BodyPartGenerator_GlobalVersion</patchName>
				<arguments>
					<li>1.2</li>
					<li>advanced</li>
					<li>1200</li>
				</arguments>
			</Operation>

			<Operation Class="XmlExtensions.ApplyPatch">
				<patchName>WVC_BodyPartGenerator_GlobalVersion</patchName>
				<arguments>
					<li>1.3</li>
					<li>cybernetic</li>
					<li>2100</li>
				</arguments>
			</Operation>

			<Operation Class="XmlExtensions.ApplyPatch">
				<patchName>WVC_BodyPartGenerator_GlobalVersion</patchName>
				<arguments>
					<li>1.4</li>
					<li>ultra</li>
					<li>2700</li>
				</arguments>
			</Operation>

			<Operation Class="XmlExtensions.ApplyPatch">
				<patchName>WVC_BodyPartGenerator_GlobalVersion</patchName>
				<arguments>
					<li>1.5</li>
					<li>archotech</li>
					<li>3200</li>
				</arguments>
			</Operation>

		</caseTrue>
	</Operation>

</Patch>