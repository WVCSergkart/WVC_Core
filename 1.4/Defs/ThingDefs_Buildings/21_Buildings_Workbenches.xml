  <ThingDef ParentName="AncientBuildings_WVC" Name="WVC_ImplantWorkBenches_Base" Abstract="True">
	<label>implant workbench</label>
	<description>An experimentally recreated workbench of the ancients. This workbench contains everything you need to create complex body parts.</description>
	<!-- = -->
	<thingClass>Building_WorkTable</thingClass>
	<canOverlapZones>false</canOverlapZones>
	<minifiedDef>MinifiedThing</minifiedDef>
	<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
	<thingCategories>
	  <li>BuildingsProduction</li>
	</thingCategories>
	<interactionCellIcon>DiningChair</interactionCellIcon>
	<building>
	  <!-- <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity> -->
	  <buildingTags>
		<li>Production</li>
	  </buildingTags>
	</building>
	<!-- = -->
	<graphicData>
	  <texPath>WVC/Stuff/AncientCraftingBench/AncientCraftingBench</texPath>
	  <graphicClass>Graphic_Multi</graphicClass>
	  <drawSize>(3.5,1.5)</drawSize>
	  <damageData>
		<cornerTL>Damage/Corner</cornerTL>
		<cornerTR>Damage/Corner</cornerTR>
		<cornerBL>Damage/Corner</cornerBL>
		<cornerBR>Damage/Corner</cornerBR>
	  </damageData>
	</graphicData>
	<castEdgeShadows>true</castEdgeShadows>
	<staticSunShadowHeight>0.20</staticSunShadowHeight>
	<costList>
	  <Plasteel>150</Plasteel>
	  <Uranium>23</Uranium>
	  <ComponentSpacer>5</ComponentSpacer>
	  <VFE_ComponentMechanoid>2</VFE_ComponentMechanoid>
	</costList>
	<altitudeLayer>Building</altitudeLayer>
	<fillPercent>0.5</fillPercent>
	<useHitPoints>True</useHitPoints>
	<statBases>
	  <Mass>130</Mass>
	  <MaxHitPoints>1180</MaxHitPoints>
	  <Flammability>0.0</Flammability>
	  <Cleanliness>-1</Cleanliness>
	  <MarketValue>220</MarketValue>
	  <WorkTableWorkSpeedFactor>1.0</WorkTableWorkSpeedFactor>
	  <WorkTableEfficiencyFactor>1.0</WorkTableEfficiencyFactor>
	</statBases>
	<size>(3,1)</size>
	<designationCategory>Production</designationCategory>
	<designatorDropdown>HGS_Workbenches_WVC</designatorDropdown>
	<passability>PassThroughOnly</passability>
	<pathCost>50</pathCost>
	<hasInteractionCell>True</hasInteractionCell>
	<interactionCellOffset>(0,0,-1)</interactionCellOffset>
	<surfaceType>Item</surfaceType>
	<recipes>
	  <!-- <li>ButcherCorpseMechanoid</li> -->
	</recipes>
	<inspectorTabs>
	  <li>ITab_Bills</li>
	</inspectorTabs>
	<comps>
	  <li>
		<compClass>CompReportWorkSpeed</compClass>
	  </li>
	  <li Class="CompProperties_Power">
		<compClass>CompPowerTrader</compClass>
		<shortCircuitInRain>true</shortCircuitInRain>
		<basePowerConsumption>350</basePowerConsumption>
	  </li>
	  <li Class="CompProperties_Flickable"/>
	  <li Class="CompProperties_AffectedByFacilities">
		<linkableFacilities>
		  <li>ToolCabinet</li>
		</linkableFacilities>
	  </li>
	  <li Class="CompProperties_Forbiddable"/>
	</comps>
	<constructEffect>ConstructMetal</constructEffect>
	<researchPrerequisites Inherit="False">
	  <li>WVC_RaceResearching_Valkyries</li>
	</researchPrerequisites>
	<placeWorkers>
	  <li>PlaceWorker_ReportWorkSpeedPenalties</li>
	  <li>PlaceWorker_ShowFacilitiesConnections</li>
	  <li>PlaceWorker_PreventInteractionSpotOverlap</li>
	</placeWorkers>
  </ThingDef>

