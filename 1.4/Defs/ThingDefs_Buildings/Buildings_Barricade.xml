  <ThingDef ParentName="WVC_Ultra_SpawnersAndOther_Base">
	<defName>WVC_MechtechBarricade</defName>
	<label>mechtech barricade</label>
	<description>A waist-high barrier for use as cover from incoming shots. Barricades are ugly, but provide better cover than other low objects. Barricades will block certain kinds of animals the same way that fences do.</description>
	<thingClass>Building</thingClass>
	<category>Building</category>
	<graphicData>
	  <texPath>WVC/Stuff/WallsDoorsColumns/TableBarricade/TableBarricade_Atlas</texPath>
	  <graphicClass>Graphic_Single</graphicClass>
	  <!-- <shaderType>CutoutComplex</shaderType> -->
	  <color>(181,165,153)</color>
	  <linkType>Basic</linkType>
	  <linkFlags>
		<li>Barricades</li>
	  </linkFlags>
	</graphicData>
	<uiIconPath>WVC/Stuff/WallsDoorsColumns/TableBarricade_Icon</uiIconPath>
	<uiIconScale>1.0</uiIconScale>
	<altitudeLayer>Building</altitudeLayer>
	<pathCost>42</pathCost>
	<pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
	<passability>PassThroughOnly</passability>
	<castEdgeShadows>true</castEdgeShadows>
	<fillPercent>0.55</fillPercent>
	<canOverlapZones>false</canOverlapZones>
	<statBases>
	  <MarketValue>210</MarketValue>
	  <MaxHitPoints>8000</MaxHitPoints>
	  <Beauty>3</Beauty>
	  <Mass>5</Mass>
	</statBases>
	<costList>
	  <Plasteel>30</Plasteel>
	  <Uranium>10</Uranium>
	  <!-- <ComponentSpacer>1</ComponentSpacer> -->
	</costList>
	<building>
	  <paintable>true</paintable>
	  <ai_chillDestination>false</ai_chillDestination>
	  <isInert>true</isInert>
	  <isFence>true</isFence>
	  <isPlaceOverableWall>true</isPlaceOverableWall>
	  <blueprintGraphicData>
		<texPath>Things/Building/Linked/Barricade_Blueprint_Atlas</texPath>
	  </blueprintGraphicData>
	</building>
	<placingDraggableDimensions>1</placingDraggableDimensions>
	<filthLeaving>Filth_RubbleBuilding</filthLeaving>
	<rotatable>false</rotatable>
	<selectable>true</selectable>
	<neverMultiSelect>true</neverMultiSelect>
	<!-- <terrainAffordanceNeeded>Light</terrainAffordanceNeeded> -->
	<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
	<designationCategory>WVC_UltraExpansion</designationCategory>
	<staticSunShadowHeight>0.20</staticSunShadowHeight>
	<researchPrerequisites Inherit="False">
	  <!-- <li>WVC_Ultra_DefenceSystems</li> -->
	  <li>WVC_Ultra_Mechtech</li>
	</researchPrerequisites>
	<comps>
	</comps>
