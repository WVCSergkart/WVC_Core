		<!-- <thingToSpawn>VFE_ComponentMechanoid</thingToSpawn> -->
		<!-- <spawnCount>2</spawnCount> -->
		<!-- <spawnIntervalRange><min>120000</min><max>120000</max></spawnIntervalRange> -->
