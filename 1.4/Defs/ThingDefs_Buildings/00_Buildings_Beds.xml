<Defs>

  <!-- ============================================================ -->
  
  <ThingDef ParentName="BaseBuildings_WVC" Name="WVC_BuildingBed_Base" Abstract="True">
	<!-- <defName>WVC_MechanoidBed</defName> -->
	<!-- = -->
	<!-- <description>An impassable wall. Capable of holding up a roof.</description> -->
	<thingClass>Building_Bed</thingClass>
	<altitudeLayer>Building</altitudeLayer>
	<comps>
	  <li Class="CompProperties_AssignableToPawn">
		<drawAssignmentOverlay>true</drawAssignmentOverlay>
		<compClass>CompAssignableToPawn_Bed</compClass>
		<!-- <maxAssignedPawnsCount>1</maxAssignedPawnsCount> -->
	  </li>
	  <li Class="CompProperties_AffectedByFacilities">
		<linkableFacilities>
		  <li>EndTable</li>
		  <li>Dresser</li>
		  <li MayRequire="Ludeon.RimWorld.Ideology">SleepAccelerator</li>
		</linkableFacilities>
	  </li>
	</comps>
	<drawGUIOverlay>true</drawGUIOverlay>
	<canOverlapZones>false</canOverlapZones>
	<placeWorkers>
	  <li>PlaceWorker_ShowFacilitiesConnections</li>
	</placeWorkers>
	<passability>PassThroughOnly</passability>
	<defaultPlacingRot>South</defaultPlacingRot>
	<!-- = -->
	<label>bed</label>
	<description>A high-tech bed that perfectly adapts to the person sleeping on it.</description>
	<techLevel>Spacer</techLevel>
	<graphicData Inherit="False">
	  <texPath>WVC/Stuff/Furniture/AncientBed</texPath>
	  <graphicClass>Graphic_Multi</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
	  <drawSize>(2,2)</drawSize>
	</graphicData>
	<!-- <canGenerateDefaultDesignator>false</canGenerateDefaultDesignator> -->
	<statBases>
	  <MarketValue>210</MarketValue>
	  <MaxHitPoints>1100</MaxHitPoints>
	  <Mass>30</Mass>
	  <BedRestEffectiveness>1</BedRestEffectiveness>
	  <ImmunityGainSpeedFactor>1.1</ImmunityGainSpeedFactor>
	  <SurgerySuccessChanceFactor>1.2</SurgerySuccessChanceFactor>
	  <Beauty>2</Beauty>
	  <Comfort>1.1</Comfort>
	  <BirthRitualQualityOffset MayRequire="Ludeon.RimWorld.Biotech">15</BirthRitualQualityOffset>
	</statBases>
	<costList>
	  <Plasteel>30</Plasteel>
	</costList>
	<stuffCategories>
	  <li>Metallic</li>
	  <!-- <li>Woody</li> -->
	  <!-- <li>Stony</li> -->
	</stuffCategories>
	<costStuffCount>5</costStuffCount>
	<size>(1,2)</size>
	<building>
	  <bed_slabBed>true</bed_slabBed>
	  <bed_showSleeperBody>true</bed_showSleeperBody>
	  <buildingTags>
		<li>Bed</li>
	  </buildingTags>
	</building>
	<killedLeavings>
	  <ChunkSlagSteel>2</ChunkSlagSteel>
	</killedLeavings>
	<researchPrerequisites Inherit="False">
	  <li>ComplexFurniture</li>
	</researchPrerequisites>
	<fillPercent>0.3</fillPercent>
	<pathCost>20</pathCost>
	<staticSunShadowHeight>0.17</staticSunShadowHeight>
	<castEdgeShadows>True</castEdgeShadows>
	<uiIconScale>0.90</uiIconScale>
	<!-- <designatorDropdown>HGS_Beds_WVC</designatorDropdown> -->
	<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
	<designationCategory>WVC_UltraExpansion</designationCategory>
	<minifiedDef>MinifiedThing</minifiedDef>
	<thingCategories>
	  <li>BuildingsFurniture</li>
	</thingCategories>
  </ThingDef>

	<ThingDef Name="WVC_BuildingBed_Ancient" ParentName="WVC_BuildingBed_Base" Abstract="True">
		<techLevel>Spacer</techLevel>
		<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
