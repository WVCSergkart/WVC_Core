<Defs>

  <WorkTypeDef>
	<defName>WVC_ComplexWork</defName>
	<labelShort>Ultra</labelShort>
	<pawnLabel>complex work</pawnLabel>
	<gerundLabel>complex crafting</gerundLabel>
