  <!--=====================================================================-->

  <TraderKindDef>
	<defName>WVC_Orbital_ExoticAlloysTrader</defName>
	<label>empire alloys trader</label>
	<orbital>true</orbital>
	<stockGenerators>
	  
	  <!-- Resources -->
	  <li Class="StockGenerator_SingleDef">
		<thingDef>Silver</thingDef>
		<countRange>4000~12000</countRange>
	  </li>
	  <li Class="StockGenerator_Category">
		<categoryDef>WVC_ExoticMetals</categoryDef>
		<thingDefCountRange>5~9</thingDefCountRange>
		<countRange>200~2000</countRange>
	  </li>
	  <li Class="StockGenerator_Category">
		<categoryDef>WVC_MetalResources_Raw</categoryDef>
		<thingDefCountRange>2~5</thingDefCountRange>
