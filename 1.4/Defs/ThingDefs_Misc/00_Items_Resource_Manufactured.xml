  <ThingDef ParentName="ResourceBase">
	<defName>WVC_UniversalFuel</defName>
	<label>ultranites</label>
	<description>Unstable convertible microscopic machines capable of taking the desired "form". To manipulate them, special devices are required. They can be eaten as a nutritional paste.</description>
	<descriptionHyperlinks>
	  <!-- <ConceptDef>WVC_MechanitesIsUniversalFuel</ConceptDef> -->
	</descriptionHyperlinks>
	<!-- <tickerType>Normal</tickerType> -->
	<techLevel>Ultra</techLevel>
	<graphicData>
	  <texPath>WVC/Stuff/UniversalFuel</texPath>
	  <graphicClass>Graphic_StackCount</graphicClass>
	  <drawSize>1.2</drawSize>
	</graphicData>
	<stackLimit>500</stackLimit>
	<healthAffectsPrice>false</healthAffectsPrice>
	<socialPropernessMatters>true</socialPropernessMatters>
	<!-- <smallVolume>true</smallVolume> -->
	<statBases>
	  <MaxHitPoints>50</MaxHitPoints>
	  <MarketValue>0.7</MarketValue>
	  <Mass>0.005</Mass>
	  <Flammability>0.0</Flammability>
	  <DeteriorationRate>0.0</DeteriorationRate>
	  <Nutrition>0.06</Nutrition>
	  <Bulk MayRequire="ceteam.combatextended">0.2</Bulk>
	</statBases>
	<intricate>true</intricate>
	<thingCategories>
	  <li>Manufactured</li>
	  <li>FoodMeals</li>
	  <!-- <li>ResourcesRaw</li> -->
	</thingCategories>
	<ingestible>
	  <foodType>Fluid</foodType>
	  <preferability>DesperateOnly</preferability>
	  <!-- <foodType>Processed</foodType> -->
	  <ateEvent>AteNutrientPaste</ateEvent>
	  <ingestEffect>EatVegetarian</ingestEffect>
	  <ingestSound>Meal_Eat</ingestSound>
	  <babiesCanIngest>true</babiesCanIngest>
	  <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
	  <!-- <tableDesired>false</tableDesired> -->
	  <!-- <ingestHoldUsesTable>false</ingestHoldUsesTable> -->
	  <!-- <optimalityOffsetHumanlikes>-100</optimalityOffsetHumanlikes> -->
	  <!-- <optimalityOffsetFeedingAnimals>-100</optimalityOffsetFeedingAnimals> -->
	</ingestible>
	<comps>
	  <li Class="CompProperties_Glower">
		<glowRadius>2</glowRadius>
		<glowColor>(78, 226, 229, 0)</glowColor>
	  </li>
	</comps>
	<allowedArchonexusCount>500</allowedArchonexusCount>
  </ThingDef>

