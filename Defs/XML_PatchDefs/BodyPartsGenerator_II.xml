	<XmlExtensions.PatchDef Name="WVC_BodyPartGeneratorII" Abstract="True">
		<parameters>
			<!-- WVC_Hediff_BodyPart_Ancient -->
			<li>BodyPartNamingValue</li>
			<!-- WVC_BodyPartAncientBase -->
			<li>BodyPartParentName</li>
		</parameters>
		<apply>

			<Operation Class="XmlExtensions.ForEach">
				<xpath>/Defs/XmlExtensions.SlateDef[@Name="WVC_BodyPartGeneratorII_PartsList"]/bodyPart</xpath>
				<storeIn>DEF</storeIn>
				<apply>

					<Operation Class="XmlExtensions.Log">
						<xpath>{DEF}/bodyPart/li</xpath>
					</Operation>

					<Operation Class="XmlExtensions.CreateVariable">
						<value>{DEF}/bodyPart/li</value>
						<storeIn>DefName_bodyPart</storeIn>
						<fromXml>true</fromXml>
						<apply>

							<Operation Class="PatchOperationAdd">
								<xpath>/Defs</xpath>
								<value>

								  <ThingDef ParentName="WVC_BodyPartAdvancedBionicBase" Abstract="True">
									<description>Body part created using high technology.</description>
									<techLevel>Spacer</techLevel>
									<thingCategories>
									  <li>WVC_BodyPartsTorture</li>
									</thingCategories>
									<graphicData>
									  <color>(222,165,171)</color>
									  <!-- <color>(255,188,196)</color> -->
									</graphicData>
									<costList>
									  <!-- <Uranium>5</Uranium> -->
									</costList>
									<recipeMaker>
									  <skillRequirements>
										<Crafting>8</Crafting>
										<Intellectual>4</Intellectual>
										<Medicine>6</Medicine>
									  </skillRequirements>
									  <researchPrerequisite>WVC_BionicTech_Torture</researchPrerequisite>
									  <recipeUsers>
										<li>FabricationBench</li>
									  </recipeUsers>
									</recipeMaker>
									<statBases>
									  <WorkToMake>7000</WorkToMake>
									  <!-- <MarketValue>1100</MarketValue> -->
									  <DeteriorationRate>0.3</DeteriorationRate>
									</statBases>
									<tradeTags>
									  <li>Bionic</li>
									</tradeTags>
									<techHediffsTags Inherit="False">
									  <li>PainCauser</li>
									</techHediffsTags>
								  </ThingDef>

								</value>
							</Operation>

						</apply>
					</Operation>

				</apply>
			</Operation>

			<!--=====================================================================-->


		</apply>
	</XmlExtensions.PatchDef>


</Defs>