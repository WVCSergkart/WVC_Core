			<InjuryHealingFactor>1.2</InjuryHealingFactor>
			<IncomingDamageFactor>0.70</IncomingDamageFactor>
			<ImmunityGainSpeed>1.5</ImmunityGainSpeed>
			<PawnTrapSpringChance>0.0</PawnTrapSpringChance>
			<FilthRate>0.0</FilthRate>
		</statFactors>
		<statOffsets>
			<ArmorRating_Blunt>0.50</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.50</ArmorRating_Sharp>
			<!-- <ArmorRating_Heat>0.30</ArmorRating_Heat> -->
		</statOffsets>
		<capMods>
		  <li>
			<capacity>Consciousness</capacity>
			<offset>0.1</offset>
		  </li>
		  <li>
			<capacity>Moving</capacity>
			<offset>0.2</offset>
		  </li>
		  <li>
			<capacity>Manipulation</capacity>
			<offset>0.1</offset>
		  </li>
		</capMods>
	  </li>
	</stages>
