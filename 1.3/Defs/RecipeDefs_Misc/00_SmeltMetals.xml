  <RecipeDef WVC_Tag="ExoticAlloysRecipeSmelter">
	<defName>WVC_SmeltExoticMetals_Plasteel</defName>
	<label>smelt exotic alloys (Plasteel)</label>
	<description>Use heat and strong electromagnets to get useful alloys</description>
	<jobString>Smelting alloy.</jobString>
	<workAmount>3000</workAmount>
	<workSpeedStat>SmeltingSpeed</workSpeedStat>
	<effectWorking>Smelt</effectWorking>
	<soundWorking>Recipe_Smelt</soundWorking>
	<allowMixingIngredients>true</allowMixingIngredients>
	<targetCountAdjustment>75</targetCountAdjustment>
	<recipeUsers>
	  <li>WVC_AdvancedCraftingBench</li>
	</recipeUsers>
	<ingredients>
	  <li>
		<filter>
		  <categories>
			<li>WVC_ExoticMetals</li>
		  </categories>
		</filter>
		<count>75</count>
	  </li>
	</ingredients>
	<products>
	  <Plasteel>75</Plasteel>
	</products>
	<fixedIngredientFilter>
	  <categories>
		<li>WVC_ExoticMetals</li>
	  </categories>
	</fixedIngredientFilter>
  </RecipeDef>

