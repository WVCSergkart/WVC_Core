	<Operation Class="XmlExtensions.FindMod">
		<mods>
			<li>ludeon.rimworld.royalty</li>
		</mods>
		<packageId>true</packageId>
		<caseTrue>

			<Operation Class="PatchOperationAdd">
				<xpath>/Defs/FactionDef[defName="Empire"]/permanentEnemyToEveryoneExcept</xpath>
				<value>
					<li>PlayerFaction_NodesFormers_WVC</li>
				</value>
			</Operation>

		</caseTrue>
	</Operation>

	<Operation Class="XmlExtensions.FindMod">
		<mods>
			<li>vanillaexpanded.vpsycastse</li>
		</mods>
		<packageId>true</packageId>
		<caseTrue>

			<Operation Class="PatchOperationAdd">
				<xpath>/Defs/VanillaPsycastsExpanded.PsycasterPathDef[defName="VPE_Archotechist"]/requiredBackstoriesAny</xpath>
				<value>
					<li>
					  <categoryName>WVC_NodesBackstory_Former</categoryName>
					  <slot>Childhood</slot>
					</li>
					<li>
					  <categoryName>WVC_NodesBackstory_Former</categoryName>
					  <slot>Adulthood</slot>
					</li>
				</value>
			</Operation>

		</caseTrue>
	</Operation>

	<!--=====================================================================-->

	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>honkai.girls.sergkart</modId>
		<key>WVC_Nodes_EnableFormerWandererEvent</key>
		<defaultValue>true</defaultValue>
		<caseFalse>
			<Operation Class="XmlExtensions.PatchOperationSafeRemove">
				<xpath>/Defs/IncidentDef[@ParentName="WVC_Nodes_WandererEventFormer_Base"]</xpath>
			</Operation>
		</caseFalse>
		<caseTrue>

			<Operation Class="PatchOperationAdd">
				<xpath>/Defs</xpath>
				<value>

				  <AlienRace.RaceSettings>
					<defName>NodeRaces_Additional_RaceSettings_WVC</defName>
					<pawnKindSettings>
					  <startingColonists>
						<li>
						  <pawnKindEntries>
							<li>
							  <kindDefs>
								<li>WVC_AlienRace_Meka</li>
							  </kindDefs>
							  <chance>10.0</chance>
							</li>
						  </pawnKindEntries>
						  <factionDefs>
							<li>PlayerColony</li>
						  </factionDefs>
						</li>
					  </startingColonists>
					  <alienrefugeekinds>
						<li>
							<kindDefs>
								<li>WVC_AlienRace_Meka</li>
								<li>WVC_AlienRace_RedFormer</li>
								<li>WVC_AlienRace_YellowFormer</li>
								<li>WVC_AlienRace_BlueFormer</li>
							</kindDefs>
							<chance>10.0</chance>
						</li>
					  </alienrefugeekinds>
					  <alienwandererkinds>
						<li>
							<pawnKindEntries>
								<li>
									<kindDefs>
										<li>WVC_AlienRace_Meka</li>
									</kindDefs>
									<chance>10.0</chance>
								</li>
							</pawnKindEntries>
							<factionDefs>
								<li>PlayerColony</li> 
							</factionDefs>
						</li>
					  </alienwandererkinds>
					</pawnKindSettings>
				  </AlienRace.RaceSettings>

				</value>
			</Operation>

		</caseTrue>
	</Operation>

	<!--=====================================================================-->

	<Operation Class="XmlExtensions.ApplyPatch">
		<patchName>Autopatcher_ApparelPatch_Utility_WVC</patchName>
		<arguments>
			<li>WVC_AlienRace_BlueFormer</li>
		</arguments>
	</Operation>

	<Operation Class="XmlExtensions.ApplyPatch">
		<patchName>ThoughtsOpinion_Autopatcher_WVC</patchName>
		<arguments>
			<li>WVC_AlienRace_BlueFormer</li>
		</arguments>
	</Operation>
	<Operation Class="XmlExtensions.ApplyPatch">
		<patchName>Autopatcher_ApparelPatch_Utility_WVC</patchName>
		<arguments>
			<li>WVC_AlienRace_RedFormer</li>
		</arguments>
	</Operation>
	<Operation Class="XmlExtensions.ApplyPatch">
		<patchName>Autopatcher_ApparelPatch_Utility_WVC</patchName>
		<arguments>
			<li>WVC_AlienRace_YellowFormer</li>
		</arguments>
	</Operation>

</Patch>